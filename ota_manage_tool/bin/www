#!/usr/bin/env node

/**
 * Module dependencies.
 */

var app = require('../app');
global.CONFIG = require('./config.js')('../config.json');
var debug = require('debug')('otadevleopmentassistserver:server');
var http = require('http');
var dbConnector = require('./db/dbConnector');
var logger = require('../services/logger');
/**
 * Get port from environment and store in Express.
 */

var port = normalizePort(CONFIG.node_port || '3000');
console.log(`OTADevelopmentAssistServer run by ${port} port!`);
app.set('port', port);

/**
 * Create HTTP server.
 */

var server = http.createServer(app);

var io = require('socket.io')(server);
var ws = require('../services/webSocketService');
ws.start(io);
/**
 * Listen on provided port, on all network interfaces.
 */

server.listen(port);
server.on('error', onError);
server.on('listening', () => {
  
  onListening();

  /** Connect to Database **/
  dbConnector.connect()
  .then( (db) => {
    dbConnector.connected(db);
  })
  .catch((err, db) => {
    logger.error(err);
    dbConnector.alterResult(err, db);
    this.process.exit(1);
  })

});

/**
 * Normalize a port into a number, string, or false.
 */

function normalizePort(val) {
  var port = parseInt(val, 10);

  if (isNaN(port)) {
    // named pipe
    return val;
  }

  if (port >= 0) {
    // port number
    return port;
  }

  return false;
}

/**
 * Event listener for HTTP server "error" event.
 */

function onError(error) {
  if (error.syscall !== 'listen') {
    logger.error(err);
    throw error;
  }

  var bind = typeof port === 'string'
    ? 'Pipe ' + port
    : 'Port ' + port;

  // handle specific listen errors with friendly messages
  switch (error.code) {
    case 'EACCES':
      console.error(bind + ' requires elevated privileges');
      process.exit(1);
      break;
    case 'EADDRINUSE':
      console.error(bind + ' is already in use');
      process.exit(1);
      break;
    default:
      throw error;
  }
}

/**
 * Event listener for HTTP server "listening" event.
 */

function onListening() {
  var addr = server.address();
  var bind = typeof addr === 'string'
    ? 'pipe ' + addr
    : 'port ' + addr.port;
  debug('Listening on ' + bind);
}
